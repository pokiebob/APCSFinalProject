  size(1200,750);
  int[][] background = pumpkinPatch();
  
  /* Creates 15 x 16 (grid) */
  for(int i = 0; i < yPatch; i++){
    for(int j = 0; j < xPatch; j++){
      if (background[i][j]==1){
        fill(255);
        rect(j*50,i*50,50,50);
      }
      else{
        fill(0);
        rect(j*50,i*50,50,50);
      }
    }
  }
  
}

